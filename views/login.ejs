<%- include layouts/header.ejs %>

<div class="container">
    <div class="col-md-2"></div>
    <div class="row col-md-8" style="margin-top:50px;">

        <form id="login-form" class="login-form" action="/logincheck" method="post" style="margin-top: -30px;">
            <div class="margin-b-30">
                <h1 class="login-form-title">Login</h1>
                <p style="line-height:35px;">Your credentials</p>
            </div>
            <% if (locals.messages){ %>

                <div class="alert alert-danger">
                <strong><%= locals.messages.msg %></strong>
                </div>

            <% } %>
            <div class="form-group">
                <input width="200" class="form-control" type="text" autocomplete="on" placeholder="Username" name="username" id="username" />
            </div>
            <div class="form-group">
                <input  width="200" class="form-control" type="password" autocomplete="on" placeholder="Password" name="password" id="password" />
            </div>
            <!-- <div class="login-form-actions">
                <div class="checkbox pull-left">
                    <input id="checkbox" type="checkbox" name="remember_me">
                    <label for="checkbox">
                                Remember me
                    </label>
                </div>
                <a href="javascript:void(0);" id="forgot-password" class="login-form-forgot">Forgot Password?</a>
            </div> -->

            <input id="login" type="submit" class="btn-base-bg btn-base-sm btn-block radius-3 margin-b-30" value="Login">
            <!-- <button id="login2" type="button" class="btn-fb-bg btn-base-sm btn-block radius-3 margin-b-30">Login with Facebook</button> -->
            <p>
                Don't have account?
                <a href="/signup" id="go-to-signup-form-btn">Signup</a>
            </p>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>

<%- include layouts/footer.ejs %>